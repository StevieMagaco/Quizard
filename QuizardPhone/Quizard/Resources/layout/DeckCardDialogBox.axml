<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@null"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="300dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/cardEditTextViewID"
        android:text="Long tap to edit"
        android:layout_marginBottom="5dp" />
    <EditText xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:textColor="#000000"
        android:id="@+id/cardDialogEditTextID"
        android:background="#ffffff"
        android:text="Text goes here"
        android:textColorHighlight="#e6e6e6"
        android:longClickable="true"
        android:focusable="true"
        tools:visibility="gone"
        android:layout_marginTop="30dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:textColor="#000000"
        android:id="@+id/cardDialogTextViewID"
        android:background="#ffffff"
        android:text="Text"
        android:layout_marginTop="30dp" />
    <Button
        android:text="FLIP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ButtonStyle"
        android:id="@+id/cardFlipButtonID" />
</LinearLayout>